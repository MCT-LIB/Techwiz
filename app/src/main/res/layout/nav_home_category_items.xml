<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home_category_items_layout"
    android:layout_width="wrap_content"
    android:layout_height="170dp"
    android:background="@drawable/bg_radius_20"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_marginEnd="12dp"
    tools:backgroundTint="@color/green_light">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/category_doctor_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/app_launcher_round" />

    <TextView
        android:id="@+id/category_doctor_type"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Dentist" />
</LinearLayout>