<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/bg_radius_20"
    android:backgroundTint="@color/primary"
    android:elevation="10dp"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/like_doctor"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_margin="7dp"
        android:src="@drawable/ic_baseline_thumb_up_24"
        android:visibility="visible"
        app:tint="@color/yellow_dark" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/doctor_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/app_launcher_round" />

    <TextView
        android:id="@+id/doctor_name"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Dr.Meomeo"
        android:textColor="@color/white_smoke"
        android:textSize="19sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/doctor_major"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_heart" />
</LinearLayout>