<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <CheckBox
        android:id="@+id/cb_check_type"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="6dp"
        android:buttonTint="@color/white"
        android:checked="true"
        android:elevation="2dp"
        android:gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/nav_home_category_items_layout"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:background="@drawable/bg_radius_20"
        android:gravity="center"
        android:minWidth="140dp"
        android:orientation="vertical"
        android:padding="20dp"
        tools:backgroundTint="@color/green_light">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/category_doctor_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/app_launcher_round" />

        <TextView
            android:id="@+id/category_doctor_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Dentist" />
    </LinearLayout>

</RelativeLayout>